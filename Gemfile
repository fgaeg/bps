# If you have OpenSSL installed, we recommend updating
# the following line to use "https"
source 'http://rubygems.org'

gem "middleman", "~> 3.3.7"
gem "middleman-blog", "~> 3.5.3"
gem "middleman-sprockets"

# For feed.xml.builder and sitemap.xml.builder
gem "builder", "~> 3.0"

# Live-reloading plugin
gem "middleman-livereload"

# Compile and build to Github pages
gem "middleman-gh-pages"

# Compile and compress for build
gem "middleman-smusher"

# Stylesheet parser engine
# gem "compass"
gem "sass"

# Javascript interpreter for ruby with V8
gem "therubyracer"

# HTML parser engine
gem "haml"

# JSON parser
gem "oj"

# Markdown engine
gem "redcarpet"

# Helper for blog engine
gem "nokogiri"